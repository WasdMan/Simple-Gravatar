<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
        <id>Inter:SimpleGravatar</id>
        <name>Simple Gravatar</name>
        <version>beta</version>
        <type>modification</type>
	<install for="2.0.2">
		<readme type="inline">This will install Simple Gravatar for SMF 2.0.2</readme>
		<modification>install2.xml</modification>
		<modification>lang/ansi.xml</modification>
		<modification>lang/utf8.xml</modification>
		<!-- Install scripts -->
		<database>install2.php</database>
		<redirect url="?action=admin;area=manageattachments;sa=avatars" timeout="5000" />
	</install>
	
	<uninstall for="2.0.2">
		<readme type="inline">This will uninstall Simple Gravatar for SMF 2.0.2</readme>
		<modification reverse="true">install2.xml</modification>
		<modification reverse="true">lang/ansi.xml</modification>
		<modification reverse="true">lang/utf8.xml</modification>
	</uninstall>
</package-info>